
<div class="center jumbotron text-center pt-5">
  <div class="container">
    <h1 class="text-white">CONTACT</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-9 mt-3 mb-5 mx-auto">
      <%= form_for @inquiry do |f| %>
        <div class="form-group">
          <%= f.label :name, 'お名前' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email_confirmation, 'メールアドレス(確認)' %>
          <%= f.text_field :email_confirmation, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :message, 'お問い合わせ内容' %>
          <%= f.text_area :message, size: '10x10', class: 'form-control' %>
        </div>
        <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>